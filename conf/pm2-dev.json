{
    "name": "bundle-rocket",
    "script": "lib/index.js",
    "log_date_format": "YYYY-MM-DD HH:mm Z",
    "error_file": "logs/node-app.stderr.log",
    "out_file": "logs/node-app.stdout.log",
    "pid_file": "pids/node-app.pid",
    "instances": 1,
    "max_restarts": 2,
    "max_memory_restart": "1000M",
    "watch": true,
    "merge_logs": true,
    "ignore_watch": [
        "public",
        "pids",
        "logs",
        "uploads",
        "bundles",
        "test"
    ]
}
